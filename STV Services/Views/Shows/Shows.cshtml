@model IEnumerable<STV.Models.Shows>

@{
    ViewBag.Title = "Shows";
}

<h2>Shows</h2>

@using (Html.BeginForm("Search", "Shows", FormMethod.Get))
{
    @Html.TextBox("searchString")
    <input type="submit" value="Search" />

}


<table class="table">
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" style="color:red">
                No Results Found
            </td>
        </tr>
    }

    else
    {
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShowName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChannelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfRelease)
            </th>

            <th></th>
        </tr>


        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ShowName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChannelName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfRelease)
                </td>

                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.ShowName }) |

                    @if (item.Favorite)
                    {
                    <button class="btn-link glyphicon glyphicon-heart" onclick="location.href='@Url.Action("UnFav", "Shows", new { show = item.ShowName })'"></button>
                    }
                    else
                    {
                    <button class="btn-link glyphicon glyphicon-heart-empty" onclick="location.href='@Url.Action("Fav", "Shows", new { show = item.ShowName })'"></button>
                    }


                </td>
            </tr>

            
        }

    }


</table>

