@model STV_Services.Models.UserViewModel

@{
    ViewBag.Title = "UserProfile";
}

<h2>User Profile</h2>

<br>
<br>
<br>

<div class="row">
    <div class="col-sm-10 col-md-6">
        <b>User Favorit Shows</b>
        <br>
        <br>

        <table class="table table-responsive-sm table-hover" style="background-color: #e7e3e3">
            @foreach (var item in Model.userfav)
            {
                <tr>
                    <td style="width:100px; height:100px">
                        <b> @Html.DisplayFor(modelItem => item.ShowName) </b>
                    </td>
                    <td style="width:40%">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                </tr>
            }
        </table>
    </div>


    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" align="center" style="width:auto; height:auto ">
        <b>User Info</b>
        <br>
        <br>

        <table style="background-color: #e7e3e3; ">
            <tr>
                <td style="width:50%; height:50%;" align="center">
                    <b>User</b>
                    <br>
                    <br>
                    <b>Username:</b>  @Html.DisplayFor(modelItem => Model.user.Username)
                    <br>
                    <b>Date Of Birth:</b>  @Convert.ToDateTime(Model.user.DateOfBirth).ToString("dd/MM/yyyy")
                    <br>
                    <br>
                    <button type="button" class="btn" onclick="location.href='@Url.Action("EditProfile","Home")'">Edit Profile</button>
                    <br>
                    <br>
                </td>
            </tr>
        </table>

    </div>

    </div>