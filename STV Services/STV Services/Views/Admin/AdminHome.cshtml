@model STV_Services.Models.AdminViewModel

@{
    ViewBag.Title = "Admin Home";
}

<h2>AdminHome</h2>

<br>
<br>
<br>
<div class="row">
    <div class="col-sm-10 col-md-6">
        <b>Streaming Services</b>
        <br>
        <br>

        <table class="table table-responsive-sm table-hover" style="background-color: #e7e3e3">
            @foreach (var item in Model.streamingSrevice)
            {

                <tr>
                    <td style="width:100px; height:100px">
                        <b> @Html.DisplayFor(modelItem => item.ServiceName) </b>
                    </td>
                    <td style="width:40%">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                </tr>

            }
        </table>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6" align="center" style="width:auto; height:auto ">
        <b>User Info</b>
        <br>
        <br>

        <table style="background-color: #e7e3e3; ">
            <tr>
                <td style="width:50%; height:50%;" align="center">
                    <b>Administrator</b>
                    <br>
                    <br>
                    <b>Username:</b>  @Html.DisplayFor(modelItem => Model.admin.Username)
                    <br>
                    <b>Date Of Birth:</b>  @Convert.ToDateTime(Model.admin.DateOfBirth).ToString("dd/MM/yyyy")
                    <br>
                    <br>
                    <button type="button" class="btn" onclick="location.href='@Url.Action("EditProfile","Home")'">Edit Profile</button>
                    <br>
                    <br>
                    <button type="button" class="btn" onclick="location.href='@Url.Action("Reports","Report")'">Reports List</button>
                    <br>
                    <br>
                    <button type="button" class="btn" onclick="location.href='@Url.Action("CreateStreamingService","Admin")'">Add Streaming Service</button>
                    <br>
                    <br>
                    <button type="button" class="btn" onclick="location.href='@Url.Action("CreatePackage","Admin")'">Add New Package</button>
                    <br>
                    <br>
                    <button type="button" class="btn" onclick="location.href='@Url.Action("CreateChannel","Admin")'">Add a Channel</button>
                    <br>
                    <br>
                    <button type="button" class="btn" onclick="location.href='@Url.Action("CreateShow","Admin")'">Add Show</button>
                    <br>
                    <br>
                    <button type="button" class="btn" onclick="location.href='@Url.Action("CreateSeason","Admin")'">Add Season</button>
                </td>
            </tr>
        </table>
    </div>

</div>